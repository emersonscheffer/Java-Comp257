import java.util.Scanner;

//3.24 (Validating User Input) Modify the program in Fig. 3.10 to validate its inputs.
//For any input, if the value entered is other than 1 or 2, keep looping until the user
//enters a correct value.
public class Ex3_24ValidatingInput {

	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		
		// initializing variables in declarations
		int passes = 0;
		int failures = 0;
		int studentCounter = 1;
		
		// process 10 students using counter-controlled loop
		while (studentCounter <= 10) {
		// prompt user for input and obtain value from user
		int result = 0;	
			do {
				System.out.print("Enter result (1 = pass, 2 = fail): "); 
				result = input.nextInt();
				if(result > 2) {
					System.out.println("Try again");
					System.out.println("Try number 1 = pass, or 2 = fail");
				}
				
			} while(result > 2);
		
			
		// if...else is nested in the while statement
		if (result == 1)
		passes = passes + 1;
		else
		failures = failures + 1;
			
		// increment studentCounter so loop eventually terminates
		studentCounter = studentCounter + 1; }
	    // termination phase; prepare and display results
		System.out.printf("Passed: %d%nFailed: %d%n", passes, failures);

		// determine whether more than 8 students passed
		if (passes > 8)
		System.out.println("Bonus to instructor!");
			

	}

}
